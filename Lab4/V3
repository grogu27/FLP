% Факты о семейных отношениях
родитель(джон, боб).
родитель(джон, пат).
родитель(мэри, боб).
родитель(мэри, пат).
родитель(боб, лиз).
родитель(боб, сэм).
родитель(пат, паул).
родитель(пат, энн).

% Указание пола
мужчина(джон).
мужчина(боб).
мужчина(сэм).
мужчина(паул).
женщина(мэри).
женщина(пат).
женщина(лиз).
женщина(энн).

% Определение других отношений
отец(Отец, Ребенок) :- родитель(Отец, Ребенок), мужчина(Отец).
мать(Мать, Ребенок) :- родитель(Мать, Ребенок), женщина(Мать).
брат(Брат, Сиб) :- родитель(Родитель, Брат), родитель(Родитель, Сиб), мужчина(Брат), Брат \= Сиб.
сестра(Сестра, Сиб) :- родитель(Родитель, Сестра), родитель(Родитель, Сиб), женщина(Сестра), Сестра \= Сиб.
внук(Внук, БабушкаДедушка) :- родитель(Родитель, Внук), родитель(БабушкаДедушка, Родитель), мужчина(Внук).
тетя(Тетя, Племянник) :- родитель(Родитель, Племянник), сестра(Тетя, Родитель).

% У кого два ребенка
двое_детей(Родитель) :- родитель(Родитель, Ребенок1), родитель(Родитель, Ребенок2), Ребенок1 \= Ребенок2.

% Продолжатель рода
продолжатель_рода(Мужчина) :- мужчина(Мужчина), родитель(Мужчина, Ребенок), мужчина(Ребенок).

% Вопросы
% а) Кто отец Сэма?
% ?- отец(Отец, сэм).

% б) Есть ли мать у Боба?
% ?- мать(Мать, боб).

% в) Кто сестра Сэма?
% ?- сестра(Сестра, сэм).

% г) Есть ли сестра у Лиз?
% ?- сестра(_, лиз).

% д) Кто брат Боба?
% ?- брат(Брат, боб).

% е) Кто внуки Мэри?
% ?- внук(Внук, мэри).

% ж) Чей внук Паул?
% ?- внук(паул, БабушкаДедушка).

% з) Кто тетя Сэма?
% ?- тетя(Тетя, сэм).

% и) Есть ли племянники у Энн?
% ?- тетя(энн, Племянник).

% к) У кого ровно двое детей?
% ?- двое_детей(Родитель).

% л) Боб - продолжатель рода?
% ?- продолжатель_рода(боб).
